#include <stdio.h>

void preencher(float *, float);

int main()
{
    float x[4], y[4], z[4];
    float a, b;

    printf("digite um valor para o vetor X e para o vetor Y: ");
    scanf("%f%f", &a, &b);

    preencher(x, a);
    preencher(y, b);

    for(int i = 0; i < 4; i++)
    {
        switch(i)
        {
            case 0: *(z + i) = *(x + i) + *(y + i); break;
            case 1: *(z + i) = *(x + i) - *(y + i); break;
            case 2: *(z + i) = *(x + i) * *(y + i); break;
            case 3: *(z + i) = *(x + i) / *(y + i); break;
        }
    }

    for(int i = 0; i < 4; i++)
        printf("%.2f\n", *(z + i));

    return 0;
}

void preencher(float *vet, float valor)
{
    for(int i = 0; i < 4; i++)
        *(vet + i) = valor;
}
